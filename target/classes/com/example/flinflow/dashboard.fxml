<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720" 
            prefWidth="1280" 
            style="-fx-background-color: #0D2B44;" 
            xmlns:fx="http://javafx.com/fxml/1" 
            xmlns="http://javafx.com/javafx/24.0.1" 
            fx:controller="com.example.flinflow.DashboardController">

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" 
          prefHeight="60.0" 
          style="-fx-background-color: #0D2B44; -fx-padding: 0 0 0 25;">
        <Label style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" 
               text="FinFlow - Expense and Income Tracker" />
    </HBox>

    <!-- Main Content -->
    <VBox layoutX="40" 
          layoutY="80" 
          prefWidth="1200" 
          spacing="25">

        <!-- Summary Cards -->
        <HBox spacing="20">
            <!-- Total Income Card -->
            <VBox alignment="CENTER" 
                  prefHeight="100" 
                  prefWidth="300" 
                  spacing="5"
                  style="-fx-background-color: white; 
                         -fx-background-radius: 10; 
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 3); 
                         -fx-padding: 15;">
                <Label style="-fx-text-fill: #4CAF50; -fx-font-size: 16px;" 
                       text="Total Income" />
                <Label fx:id="totalIncomeLabel" 
                       style="-fx-font-size: 24px; -fx-font-weight: bold;" 
                       text="RM 00.00" />
            </VBox>

            <!-- Total Expense Card -->
            <VBox alignment="CENTER" 
                  prefHeight="100" 
                  prefWidth="300" 
                  spacing="5"
                  style="-fx-background-color: white; 
                         -fx-background-radius: 10; 
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 3); 
                         -fx-padding: 15;">
                <Label style="-fx-text-fill: #f44336; -fx-font-size: 16px;" 
                       text="Total Expense" />
                <Label fx:id="totalExpenseLabel" 
                       style="-fx-font-size: 24px; -fx-font-weight: bold;" 
                       text="RM 00.00" />
            </VBox>

            <!-- Balance Card -->
            <VBox alignment="CENTER" 
                  prefHeight="100" 
                  prefWidth="300" 
                  spacing="5"
                  style="-fx-background-color: white; 
                         -fx-background-radius: 10; 
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 3); 
                         -fx-padding: 15;">
                <Label style="-fx-text-fill: #0D2B44; -fx-font-size: 16px;" 
                       text="Balance" />
                <Label fx:id="balanceLabel" 
                       style="-fx-font-size: 24px; -fx-font-weight: bold;" 
                       text="RM 00.00" />
            </VBox>
        </HBox>

        <!-- Action Buttons -->
        <HBox spacing="15">
            <Button onAction="#handleAddTransaction" 
                    prefHeight="40" 
                    prefWidth="180" 
                    style="-fx-background-color: #4A90E2; 
                           -fx-text-fill: white; 
                           -fx-font-weight: bold; 
                           -fx-background-radius: 6;" 
                    text="Add Transaction" />
            
            <Button onAction="#handleRemoveSelected" 
                    prefHeight="40" 
                    prefWidth="180" 
                    style="-fx-background-color: #e74c3c; 
                           -fx-text-fill: white; 
                           -fx-font-weight: bold; 
                           -fx-background-radius: 6;" 
                    text="Remove Selected" />
            
            <Button onAction="#handleSetting" 
                    prefHeight="40" 
                    prefWidth="180" 
                    style="-fx-background-color: #5A7E9F; 
                           -fx-text-fill: white; 
                           -fx-font-weight: bold; 
                           -fx-background-radius: 6;" 
                    text="Setting" />
        </HBox>
        
        
       <!-- Transactions Table -->
<TableView fx:id="transactionTable" 
           prefHeight="400" 
           prefWidth="1150"
           style="-fx-background-color: white; 
                  -fx-background-radius: 8; 
                  -fx-border-color: #E0E0E0;">
    <columns>
        <TableColumn fx:id="idColumn" 
                     prefWidth="60" 
                     text="ID" />
        <TableColumn fx:id="typeColumn" 
                     prefWidth="90" 
                     text="Type" />
        <TableColumn fx:id="categoryColumn" 
                     prefWidth="130" 
                     text="Category" />
        <TableColumn fx:id="dateColumn" 
                     prefWidth="110" 
                     text="Date" />
        <TableColumn fx:id="descriptionColumn" 
                     prefWidth="350" 
                     text="Description" />
        <TableColumn fx:id="amountColumn" 
                     prefWidth="120" 
                     text="Amount (RM)" />
    </columns>
</TableView>

    </VBox>

</AnchorPane>
