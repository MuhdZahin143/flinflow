<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.flinflow.RegisterController">
   
   <children>
      <VBox alignment="CENTER" 
            spacing="25.0" 
            style="-fx-background-color: #0D2B44;"
            AnchorPane.bottomAnchor="0.0" 
            AnchorPane.leftAnchor="0.0" 
            AnchorPane.rightAnchor="0.0" 
            AnchorPane.topAnchor="0.0">
         
         <children>
            <!-- App Logo & Title -->
            <VBox alignment="CENTER" 
                  spacing="5.0">
               <ImageView fitHeight="60.0" 
                          fitWidth="60.0" 
                          preserveRatio="true">
                  <Image url="@wallet.png" /> 
               </ImageView>
               <Text fill="#F0F7F9" 
                     strokeType="OUTSIDE" 
                     strokeWidth="0.0" 
                     text="Join FinFlow">
                  <font>
                     <Font name="System Bold" 
                           size="30.0" />
                  </font>
               </Text>
            </VBox>
            
            <!-- Registration Form -->
            <VBox alignment="CENTER_LEFT" 
                  spacing="10.0" 
                  style="-fx-background-color: #FFFFFF; 
                         -fx-background-radius: 10; 
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);"
                  maxWidth="380" 
                  minWidth="320">
               
               <padding>
                  <Insets bottom="35.0" 
                          left="35.0" 
                          right="35.0" 
                          top="20.0" />
               </padding>
               
               <children>
                  <!-- Form Header -->
                  <VBox spacing="5.0">
                     <Label text="Create Your Account" 
                            style="-fx-font-weight: bold; -fx-text-fill: #1C2833;">
                        <font>
                           <Font size="22.0" />
                        </font>
                     </Label>
                     <Label text="Start managing your finances today" 
                            style="-fx-text-fill: #667788;">
                        <font>
                           <Font size="13.0" />
                        </font>
                     </Label>
                  </VBox>
                  
                  <!-- Full Name Field -->
                  <VBox spacing="6.0">
                     <Label text="Full Name" 
                            style="-fx-font-weight: semi-bold; -fx-text-fill: #1C2833;" />
                     <TextField fx:id="fullNameField" 
                                promptText="Your full name" 
                                style="-fx-background-radius: 6; 
                                       -fx-border-radius: 6; 
                                       -fx-padding: 10; 
                                       -fx-border-color: #E0E0E0; 
                                       -fx-border-width: 1;" />
                  </VBox>
                  
                  <!-- Username Field -->
                  <VBox spacing="6.0">
                     <Label text="Username" 
                            style="-fx-font-weight: semi-bold; -fx-text-fill: #1C2833;" />
                     <TextField fx:id="usernameField" 
                                promptText="Choose a username" 
                                style="-fx-background-radius: 6; 
                                       -fx-border-radius: 6; 
                                       -fx-padding: 10; 
                                       -fx-border-color: #E0E0E0; 
                                       -fx-border-width: 1;" />
                  </VBox>
                  
                  <!-- Password Field -->
                  <VBox spacing="6.0">
                     <Label text="Password" 
                            style="-fx-font-weight: semi-bold; -fx-text-fill: #1C2833;" />
                     <PasswordField fx:id="passwordField" 
                                    promptText="Create a secure password" 
                                    style="-fx-background-radius: 6; 
                                           -fx-border-radius: 6; 
                                           -fx-padding: 10; 
                                           -fx-border-color: #E0E0E0; 
                                           -fx-border-width: 1;" />
                  </VBox>
                  
                  <!-- Confirm Password Field -->
                  <VBox spacing="6.0">
                     <Label text="Confirm Password" 
                            style="-fx-font-weight: semi-bold; -fx-text-fill: #1C2833;" />
                     <PasswordField fx:id="confirmPasswordField" 
                                    promptText="Re-enter your password" 
                                    style="-fx-background-radius: 6; 
                                           -fx-border-radius: 6; 
                                           -fx-padding: 10; 
                                           -fx-border-color: #E0E0E0; 
                                           -fx-border-width: 1;" />
                  </VBox>
                  
                  <!-- Register Button -->
                  <Button fx:id="registerButton" 
                          mnemonicParsing="false" 
                          onAction="#handleRegister" 
                          prefHeight="40.0" 
                          prefWidth="400.0"
                          style="-fx-background-color: #4A90E2; 
                                 -fx-text-fill: white; 
                                 -fx-font-weight: bold; 
                                 -fx-background-radius: 6; 
                                 -fx-cursor: hand;"
                          text="Sign Up">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
                  
                  <!-- Login Link -->
                  <VBox alignment="CENTER" 
                        spacing="5.0">
                     <Hyperlink fx:id="loginLink" 
                                onAction="#handleLoginLink"
                                style="-fx-text-fill: #4A90E2; 
                                       -fx-border-color: transparent; 
                                       -fx-cursor: hand; 
                                       -fx-font-size: 12;"
                                text="Already have an account? Sign In" />
                  </VBox>
               </children>
            </VBox>
         </children>
         
         <padding>
            <Insets bottom="20.0" 
                    left="20.0" 
                    right="20.0" 
                    top="40.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>