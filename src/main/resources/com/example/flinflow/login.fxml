<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.flinflow.LoginController">

    <children>
        <VBox alignment="CENTER" 
              spacing="25.0"
              style="-fx-background-color: #0D2B44;"
              AnchorPane.bottomAnchor="0.0" 
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" 
              AnchorPane.topAnchor="0.0">
            
            <children>
                <!-- Logo & App Title -->
                <VBox alignment="CENTER" 
                      spacing="5.0">
                    <ImageView fitHeight="60.0" 
                               fitWidth="60.0" 
                               preserveRatio="true">
                        <Image url="@wallet.png" />
                    </ImageView>
                    <Text fill="#F0F7F9" 
                          text="FinFlow">
                        <font>
                            <Font name="System Bold" 
                                  size="30.0" />
                        </font>
                    </Text>
                </VBox>

                <!-- Login Form Container -->
                <VBox alignment="CENTER_LEFT" 
                      spacing="18.0"
                      style="-fx-background-color: #FFFFFF; 
                             -fx-background-radius: 12; 
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 4);"
                      maxWidth="320" 
                      minWidth="280">
                    
                    <padding>
                        <Insets top="30.0" 
                                right="30.0" 
                                bottom="30.0" 
                                left="30.0" />
                    </padding>

                    <children>
                        <!-- Form Header -->
                        <VBox spacing="5.0">
                            <Label text="Sign In" 
                                   style="-fx-font-weight: bold; -fx-text-fill: #1C2833;">
                                <font>
                                    <Font size="20.0" />
                                </font>
                            </Label>
                            <Label text="Welcome back to FinFlow" 
                                   style="-fx-text-fill: #667788;">
                                <font>
                                    <Font size="12.5" />
                                </font>
                            </Label>
                        </VBox>

                        <!-- Username Field -->
                        <VBox spacing="6.0">
                            <Label text="Username" 
                                   style="-fx-font-weight: semi-bold; -fx-text-fill: #1C2833;" />
                            <TextField fx:id="usernameField" 
                                       promptText="Your username"
                                       style="-fx-background-radius: 6; 
                                              -fx-border-radius: 6; 
                                              -fx-padding: 10; 
                                              -fx-border-color: #E0E0E0; 
                                              -fx-border-width: 1;" />
                        </VBox>

                        <!-- Password Field -->
                        <VBox spacing="6.0">
                            <Label text="Password" 
                                   style="-fx-font-weight: semi-bold; -fx-text-fill: #1C2833;" />
                            <PasswordField fx:id="passwordField" 
                                           promptText="Your password"
                                           style="-fx-background-radius: 6; 
                                                  -fx-border-radius: 6; 
                                                  -fx-padding: 10; 
                                                  -fx-border-color: #E0E0E0; 
                                                  -fx-border-width: 1;" />
                        </VBox>

                        <!-- Login Button -->
                        <Button fx:id="loginButton" 
                                mnemonicParsing="false" 
                                onAction="#handleLogin"
                                maxWidth="Infinity" 
                                prefHeight="38.0"
                                style="-fx-background-color: #4A90E2; 
                                       -fx-text-fill: white; 
                                       -fx-font-weight: bold; 
                                       -fx-background-radius: 6; 
                                       -fx-cursor: hand;"
                                text="Log In">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>

                        <!-- Registration Link -->
                        <VBox alignment="CENTER" 
                              spacing="4.0">
                            <Hyperlink fx:id="registerLink" 
                                       onAction="#handleRegisterLink"
                                       style="-fx-text-fill: #4A90E2; 
                                              -fx-border-color: transparent; 
                                              -fx-cursor: hand; 
                                              -fx-font-size: 12;"
                                       text="Don't have an account? Sign Up" />
                        </VBox>
                    </children>
                </VBox>
            </children>

            <padding>
                <Insets top="30.0" 
                        right="20.0" 
                        bottom="30.0" 
                        left="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>