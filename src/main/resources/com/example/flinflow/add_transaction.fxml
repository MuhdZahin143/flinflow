<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.flinflow.AddTransactionController"
            prefWidth="420" 
            prefHeight="500"
            style="-fx-background-color: #0D2B44;">

    <!-- Main Form Container -->
    <VBox spacing="18" 
          alignment="TOP_LEFT" 
          AnchorPane.topAnchor="20" 
          AnchorPane.leftAnchor="20" 
          AnchorPane.rightAnchor="20" 
          AnchorPane.bottomAnchor="20"
          style="-fx-background-color: #0D2B44;"> 
        
        <!-- Header Section -->
        <HBox alignment="CENTER_LEFT" 
              spacing="10">
            <Label text="âž• New Transaction" 
                   style="-fx-font-size: 22px; 
                          -fx-font-weight: bold; 
                          -fx-text-fill: white;"/>
        </HBox>

        <!-- Transaction Type Selection -->
        <VBox spacing="8">
            <Label text="Type:" 
                   style="-fx-font-size: 14px; 
                          -fx-font-weight: 500; 
                          -fx-text-fill: #CCCCCC;"/>
            
            <fx:define>
                <ToggleGroup fx:id="typeGroup"/>
            </fx:define>
            
            <HBox spacing="25">
                <RadioButton fx:id="incomeRadio" 
                             text="Income" 
                             toggleGroup="$typeGroup" 
                             selected="true"
                             style="-fx-font-size: 14px; 
                                    -fx-text-fill: #81C784;"/>
                <RadioButton fx:id="expenseRadio" 
                             text="Expense" 
                             toggleGroup="$typeGroup"
                             style="-fx-font-size: 14px; 
                                    -fx-text-fill: #E57373;"/>
            </HBox>
        </VBox>

        <!-- Category Selection -->
        <VBox spacing="5">
            <Label text="Category:" 
                   style="-fx-font-size: 14px; 
                          -fx-font-weight: 500; 
                          -fx-text-fill: white;"/>
            <ComboBox fx:id="categoryBox" 
                      promptText="Select category"
                      style="-fx-background-radius: 8; 
                             -fx-border-color: #5A7E9F; 
                             -fx-border-radius: 8; 
                             -fx-padding: 8;
                             -fx-font-size: 14px;
                             -fx-background-color: white; 
                             -fx-text-fill: black;"/>
        </VBox>

        <!-- Description Input -->
        <VBox spacing="5">
            <Label text="Description:" 
                   style="-fx-font-size: 14px; 
                          -fx-font-weight: 500; 
                          -fx-text-fill: #CCCCCC;"/>
            <TextField fx:id="descriptionField" 
                       promptText="e.g., Salary, Groceries, Bills"
                       style="-fx-background-radius: 8; 
                              -fx-border-color: #5A7E9F; 
                              -fx-border-radius: 8; 
                              -fx-padding: 10; 
                              -fx-font-size: 14px;
                              -fx-background-color: white; 
                              -fx-text-fill: black;
                              -fx-prompt-text-fill: #666666;"/>
        </VBox>

        <!-- Amount Input -->
        <VBox spacing="5">
            <Label text="Amount (RM):" 
                   style="-fx-font-size: 14px; 
                          -fx-font-weight: 500; 
                          -fx-text-fill: #CCCCCC;"/>
            <TextField fx:id="amountField" 
                       promptText="e.g., 500.00"
                       style="-fx-background-radius: 8; 
                              -fx-border-color: #5A7E9F; 
                              -fx-border-radius: 8; 
                              -fx-padding: 10; 
                              -fx-font-size: 14px;
                              -fx-background-color: white; 
                              -fx-text-fill: black;
                              -fx-prompt-text-fill: #666666;"/>
        </VBox>

        <!-- Date Selection -->
        <VBox spacing="5">
            <Label text="Date:" 
                   style="-fx-font-size: 14px; 
                          -fx-font-weight: 500; 
                          -fx-text-fill: #CCCCCC;"/>
            <DatePicker fx:id="datePicker"
                        style="-fx-background-radius: 8; 
                              -fx-border-color: #5A7E9F; 
                              -fx-border-radius: 8; 
                              -fx-padding: 8;
                              -fx-font-size: 14px;
                              -fx-background-color: white; 
                              -fx-text-fill: black;"/>
        </VBox>

        <!-- Action Buttons -->
        <HBox spacing="15" 
              alignment="CENTER">
            <Button text="Add Transaction"
                    onAction="#handleAddTransaction"
                    prefWidth="150" 
                    prefHeight="45"
                    style="-fx-background-color: #4A90E2; 
                           -fx-text-fill: white; 
                           -fx-font-weight: bold; 
                           -fx-font-size: 14px;
                           -fx-background-radius: 8; 
                           -fx-cursor: hand;"/>
            
            <Button text="Cancel"
                    onAction="#handleCancel"
                    prefWidth="100" 
                    prefHeight="45"
                    style="-fx-background-color: #666666; 
                           -fx-text-fill: white; 
                           -fx-font-weight: bold; 
                           -fx-font-size: 14px;
                           -fx-background-radius: 8; 
                           -fx-cursor: hand;"/>
        </HBox>

    </VBox>

</AnchorPane>